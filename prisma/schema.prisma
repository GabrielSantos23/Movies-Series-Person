// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String?
  email String? @unique
  emailVerified DateTime?
  image String?
  hashedPassword String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // adiciona o campo 'favoritedMoviesIds'
  favoritedMoviesIds String[] @db.ObjectId
  favoritedMovies Movie[] @relation(fields: [favoritedMoviesIds], references: [id])

  // adiciona o campo 'favoritedSeriesIds'
  favoritedSeriesIds String[] @db.ObjectId
  favoritedSeries Series[] @relation(fields: [favoritedSeriesIds], references: [id])

}

model Movie {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String?
  releaseDate DateTime?
  genre String?
  runtime Int?
  director String?
  actors String[]
  poster String?
  trailerUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // adiciona o campo 'favoritedByUserIds'
  favoritedByUserIds String[] @db.ObjectId
  favoritedByUsers User[] @relation(fields: [favoritedByUserIds], references: [id])
}

model Series {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String?
  releaseDate DateTime?
  genre String?
  runtime Int?
  director String?
  actors String[]
  poster String?
  trailerUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // adiciona o campo 'favoritedByUserIds'
  favoritedByUserIds String[] @db.ObjectId
  favoritedByUsers User[] @relation(fields: [favoritedByUserIds], references: [id])
}
